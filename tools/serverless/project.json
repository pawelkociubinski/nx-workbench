{
  "name": "serverless",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/serverless/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/serverless",
        "main": "tools/serverless/src/index.ts",
        "tsConfig": "tools/serverless/tsconfig.lib.json",
        "assets": [
          "tools/serverless/*.md",
          {
            "input": "./tools/serverless/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./tools/serverless/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./tools/serverless",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./tools/serverless",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/serverless/jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventionalcommits",
        "push": true,
        "postTargets": ["build", "npm", "github"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "dist/tools/serverless"
      }
    }
  }
}
